<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<html>
   <head>
      <title></title>
      <script>
         function e(element)
         {
            return document.getElementById(element);
         }

         function f(element)
         {
            return parseFloat(e(element).value);
         }

         function updateResult()
         {
            e("inputE").value = f("inputA") * (f("inputB") / 100) * f("inputC") * f("inputD");
         }
      </script>
   </head>
   <body>
      <div onkeyup="updateResult()">
      A:<br> <input type="text" id="inputA" value="1"><br><br>
      B:<br> <input type="text" id="inputB" value="100"> %<br><br>
      C:<br> <input type="text" id="inputC" value="2"><br><br>
      D:<br> <input type="text" id="inputD" value="3"><br><br>
      Result:<br> <input type="text" id="inputE" readonly="true">
      </div>
    </body>
</html>
